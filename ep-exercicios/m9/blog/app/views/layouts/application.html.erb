    <![endif]-->
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container-fluid">

      <div class="row" id="header">
        <div class="col-sm-4 col-sm-offset-1">
